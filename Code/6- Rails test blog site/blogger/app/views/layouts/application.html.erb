<!DOCTYPE html>

<html>
	<head>
	  <title>Blogger</title>

	  <%= stylesheet_link_tag    'default', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'default', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag "jquery_ujs" %>


    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

	  <%= csrf_meta_tags %>
	</head>

	<body>

    <div class="container">

      <div class="page-header">
        

        <ul class="nav nav-pills pull-right panel panel-default">
          <li>
            <%= link_to "Home",root_url %>
          </li>

          <li>
            <%= link_to "Posts",posts_url %>

          <li>
            <%= link_to "About",about_url %>
          </li>

          <li>
            <div class="panel-body">
              <%= render 'layouts/user_widget' %>
            </div>
          </li>

        </ul>

        <h1> <%= link_to 'Mini-Blog', '/' %> <small>The small blog site</small></h1>

      </div>
      

      <div class="row">
        <div class="col-md-6 col-md-offset-2">
      	 <%= yield %>
        </div>
        <div class="col-md-2 pull-right panel panel-default">
          <div class="panel-body">
            <%= link_to "New Post", "/posts/new" %><br>
            <%= link_to "My Posts", "myposts" %><br>
          </div>
        </div>
      </div>
    </div>
    

	</body>
</html>
